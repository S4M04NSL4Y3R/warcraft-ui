<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="General.lua"/>

    <Frame name="CaerdonWardrobeConfigGeneralFrame" hidden="false" secureMixin="CaerdonWardrobeConfigGeneralMixin">
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" text="CAERDON_GENERAL_LABEL" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
                <Anchors>
                    <Anchor point="TOPLEFT">
                    <Offset>
                        <AbsDimension x="16" y="-16"/>
                    </Offset>
                    </Anchor>
                </Anchors>
                </FontString>
                <FontString name="$parentSubText" text="CAERDON_GENERAL_SUBTEXT" inherits="GameFontHighlightSmall" nonspacewrap="true" maxLines="3" justifyH="LEFT" justifyV="TOP">
                <Size>
                    <AbsDimension y="32" x="0"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
                    <Offset>
                        <AbsDimension x="0" y="-8"/>
                    </Offset>
                    </Anchor>
                    <Anchor point="RIGHT">
                    <Offset>
                        <AbsDimension x="-32" y="0"/>
                    </Offset>
                    </Anchor>
                </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>
